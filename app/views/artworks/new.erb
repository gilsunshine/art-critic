<div class="container">
    <!-- <div id="sketch"></div> -->
<%= form_for @artwork, html: { multipart: true } do |f| %>

  <% if @artwork.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artwork.errors.count, "error") %> prohibited this artwork from being saved:</h2>
      <ul>
      <% @artwork.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :year %><br>
    <%= f.text_field :year %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :Style %><br>
    <%= f.collection_check_boxes :tag_ids, Tag.where(category: "style"), :id, :name %> <br>
    Other: <%= f.text_field :style %>
  </div>

  <div class="field">
    <%= f.label :Medium %><br>
    <%= f.collection_check_boxes :tag_ids, Tag.where(category: "medium"), :id, :name %> <br>
    Other: <%= f.text_field :medium %>
  </div>

  <div class="input_fields_wrap">
      <button class="add_field_button">Add Moar Tags!!</button>
      <div><input type="text" name="mytext[]"></div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
</div>

