<style type="text/css">
  body {
    background-color: #ffffff;
  }
  body > .grid {
    height: 100%;
  }
  .image {
    margin-top: -100px;
  }
  .column {
    max-width: 450px;
  }
</style>

  <% if @user.errors.any? %>
  <div class="ui error message">
    <div class="header">
        <h4>
          <%= pluralize(@user.errors.count, "error") %>
          prohibited this user from being created:
        </h4>
    </div>
    <ul class="list">
      <% @user.errors.full_messages.each do |message| %>
        <li><%=message%></li>
      <% end %>
    </ul>
  </div>
  <%end%>

<div class="ui middle aligned center aligned grid">
  <div class="column">

    <h2 class="ui black image header">
      <!-- <img src="assets/images/logo.png" class="image"> -->
      <div class="content">
        Create an account!
      </div>
    </h2>

    <div class="ui large form">
      <div class="ui stacked segment">
        <%= form_for @user do |f| %>

        <%= f.label :name %>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :name %>
          </div>
        </div>

        <%= f.label :username %>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username %>
          </div>
        </div>

        <%= f.label "Password" %>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password %>
          </div>
        </div>

        <%= f.label "Password Confirmation" %>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
        <div>
          <button type="submit" class="ui button">Create Account</button>
        </div>
      </div>

    </div>
    <% end %>
    <div class="ui message">
      or have an account? <%= link_to "Sign In", '/login' %>
    </div>
  </div>
</div>



