<h1 style="font-family: 'Quicksand', sans-serif;"><%=@tag.category.capitalize%>&nbsp | &nbsp<%= @tag.name %></h1><hr><br>

<% if !@tag.artworks.empty? %>
<div class="ui very relaxed grid container">

  <% @tag.artworks.each do |artwork| %>
  <div class="four wide column">
    <div class="row">
      <div class="column">
        <strong><%= artwork.name %></strong>
      </div>
      <div class="column">
        <%= artwork.user.name %><br>
      </div>
      <div class="column">
        <i><%= artwork.year.name %></i>
      </div>
      <br>
      <div class="column middle aligned">
        <div class="ui fluid image"><%= link_to image_tag(artwork.image.url), artwork_path(artwork) %>
        </div><br><br>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  no results found

</div>
<% end %>
